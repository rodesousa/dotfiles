#alias

alias l='ls -l'
alias la='ls -la'
alias rtl='ls -rtl'
alias ..='cd ..'
alias ...='cd ../..'
alias cdp='cd -P'
alias datef='echo `date +%Y-%m-%d`'
alias gitmsg="firefox https://buzut.net/cours/versioning-avec-git/bien-nommer-ses-commits"

# UPDATE
alias signal_update="sudo apt update && sudo apt install signal-desktop"

# FUNCTIONS

# show own ip
show_ip(){
    wget http://ipinfo.io/ip -qO -
}


